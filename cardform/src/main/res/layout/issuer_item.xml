<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ui_dialog_title_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    tools:layout_height="@dimen/ui_dialog_title_height">

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/ui_2m"
        android:layout_marginEnd="@dimen/ui_2m"
        app:buttonTint="@color/cf_radio_button_selector"
        android:clickable="false" />

    <ImageView
        android:id="@+id/issuerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/radioButton"
        tools:src="@drawable/cf_issuer_sample" />

</RelativeLayout>
