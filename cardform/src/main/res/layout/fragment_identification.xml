<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    tools:context=".presentation.ui.formentry.IdentificationFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/identificationTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.8dp"
            android:layout_marginEnd="@dimen/ui_2m"
            android:background="@color/cf_button_navigation_text"/>

    </LinearLayout>

    <com.mercadolibre.android.cardform.presentation.ui.custom.InputFormEditText
        android:id="@+id/identificationEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"/>

</LinearLayout>